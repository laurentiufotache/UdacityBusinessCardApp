<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBDEFB">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/logo2" />

    <ImageView
        android:id="@+id/icon-a"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/icon-p"
        android:src="@drawable/address" />

    <ImageView
        android:id="@+id/icon-p"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/phone" />

    <TextView
        android:id="@+id/text-bn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:padding="25dp"
       android:layout_toRightOf="@+id/logo"
        android:text="Udacity"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="55sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text-bn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/logo"
        android:paddingLeft="90dp"
        android:layout_below="@id/text-bn"
        android:text="Learn. Think. Do."
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text-bn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/logo"
        android:paddingLeft="160dp"
        android:layout_below="@id/text-bn2"
        android:text="www.udacity.com"
        android:autoLink="web"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColorLink="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/text-a1"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="16dp"
        android:layout_above="@+id/text-a2"
        android:layout_toEndOf="@+id/icon-a"
        android:layout_toRightOf="@+id/icon-a"
        android:text="2465 Latham St"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/text-a2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="16dp"
        android:layout_above="@+id/icon-p"
        android:layout_toEndOf="@+id/icon-a"
        android:layout_toRightOf="@+id/icon-a"
        android:text="Mountain View, CA 94043"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/text-p"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/icon-a"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:layout_toEndOf="@+id/icon-p"
        android:layout_toRightOf="@+id/icon-p"
        android:text="650-555-5555"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        android:autoLink="phone"
        android:textColorLink="#000000"/>
</RelativeLayout>


